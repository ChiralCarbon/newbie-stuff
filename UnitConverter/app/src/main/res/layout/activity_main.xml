<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.usr.usr.unitconverter.MainActivity"
    android:background="#3fe381">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/lengthbutton"
        android:background="@drawable/length"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/weightbutton"
        android:layout_marginTop="42dp"
        android:background="@drawable/mass"
        android:layout_below="@+id/tempbutton"
        android:layout_alignLeft="@+id/tempbutton"
        android:layout_alignStart="@+id/tempbutton" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tempbutton"
        android:background="@drawable/temperature"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/lengthbutton"
        android:layout_alignStart="@+id/lengthbutton" />
</RelativeLayout>
